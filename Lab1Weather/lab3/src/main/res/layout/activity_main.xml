<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="504dp"
        android:layout_marginEnd="85dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="85dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="Type city"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/addDB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="419dp"
        android:layout_marginEnd="50dp"
        android:layout_marginLeft="250dp"
        android:layout_marginRight="50dp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="60dp"
        android:onClick="saveIntoDB"
        android:text="Add to DB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/delDB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="266dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="266dp"
        android:layout_marginTop="500dp"
        android:onClick="deleteAllFromDB"
        android:text="Delete all"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/showDB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="419dp"
        android:layout_marginEnd="250dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="250dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="60dp"
        android:onClick="showAllFromDB"
        android:text="show all"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/showDB_tv"
        android:layout_width="294dp"
        android:layout_height="284dp"
        android:layout_marginBottom="150dp"
        android:layout_marginEnd="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="125dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addDB" />

    <Button
        android:id="@+id/go"
        android:layout_width="59dp"
        android:layout_height="45dp"
        android:layout_marginBottom="500dp"
        android:layout_marginEnd="50dp"
        android:layout_marginLeft="280dp"
        android:layout_marginRight="50dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="16dp"
        android:onClick="onClickGo"
        android:text="GO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cityName"
        android:layout_width="107dp"
        android:layout_height="27dp"
        android:layout_marginBottom="21dp"
        android:layout_marginEnd="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="200dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="145dp"
        app:layout_constraintBottom_toTopOf="@+id/showDB_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/degrees"
        android:layout_width="88dp"
        android:layout_height="25dp"
        android:layout_marginBottom="21dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="145dp"
        app:layout_constraintBottom_toTopOf="@+id/showDB_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>